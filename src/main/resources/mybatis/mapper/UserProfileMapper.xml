<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "com.orichalcoss.dal.UserProfileDao">
    <resultMap id="BaseResultMap" type="com.orichalcoss.model.User">
        <id column="id"  property="id" jdbcType="VARCHAR"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="INTEGER"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List">
      id,mobile,password,email
    </sql>

    <select id="getUserProfileByMobile" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid ="Base_Column_List"/>
        from user_profile where mobile = #{mobile,jdbcType=INTEGER}
    </select>

    <insert id="registerByMobile" parameterMap="com.orichalcoss.model.UserProfile">
        insert into user_profile(mobile,password)
        value(#{mobile},#{password})
    </insert>
</mapper>